<div class="page-header">
  <h1><%=t ".title", default: "Login" %></h1>
</div>

<%= form_for(@game, html: {class: "form-horizontal form-user"}) do |f| %>
                                                                                                                                        
  
  <div class="form-group">
    <%#= f.label :login, "Username or Email", class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%#= f.text_field :login, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>
  

  <div class="form-group">
    <%#= f.label :password, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%#= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
    </div>
  </div>                                                                                                      
  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%#= f.submit "Login", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%#= render "devise/shared/links" %>
    </div>
  </div>

<% end %>

<h1>새 댓글 게임 만들기</h1>
<ul>
  <li>
    <p>페이지 선택</p>
      <%= render "page" %>
  </li>
  <li>
    <p>포스트 선택</p>
  </li>
</ul>
